<header>
  <h1>Biblioteka Zuz</h1>
  <img src="gfx/main/logo.png" alt="logo" />

    <div class="basket_box">
    <img src="gfx/main/basket.png" alt="basket"/>
    <form action="\goToBasketForm"  method="get">
      <input type="submit" name="koszyk" value="Koszyk" />
    </form>
    </div>

</header>

<div class="left">

<div class="box_form">
  <h3> Znajdź książkę</h3>
  <form action="/searchForm" method="get">
    <input type="text" name="szukajTytul" placeholder="Wyszukaj tytułu"/>
    <input type="submit"  name="submit" value="szukaj"/>
  </form>

  <form action="/searchForm2" method="get">
    <input type="text" name="szukajAutora" placeholder="Wyszukaj autora"/>
    <input type="submit"  name="submit" value="szukaj"/>
  </form>

  <form action="/searchForm3" method="get">
    <input type="text" name="szukajGatunku" placeholder="Wyszukaj gatunku"/>
    <input type="submit"  name="submit" value="szukaj"/>
  </form>

  <form action="/searchForm4" method="get">
     <input type="text" name="szukajWydawnictwa" placeholder="Wyszukaj wydawnictwa"/>
    <input type="submit"  name="submit" value="szukaj"/>
  </form>
</div>
<div class="sort_box">
  <h3>Sortowanie</h3>
    <form action="/sortForm" method="get" class="sort">
      <select name="sortuj">
            <option>sortuj</option>
            <option value="1">A-Z</option>
            <option value="-1">Z-A</option>
      </select>
      <input type="submit" value="sortuj"/>
    </form>
</div>

<div class="change_display">
  <h3> Zmień widok</h3>
    <select name="widok">
      <option name="tabela" value="tabela">tabela</option>
      <option name="lista" value="lista">lista</option>
      <option name="kafelki" value="kafelki">kafelki</option>
    </select>
    <button type="submit" id="display_btn">Zmień</button>
</div>
</div><!--koniec lefta-->


<!---logowanie na panel admina--->
<div class="login">
  <p> Logowanie do panelu admina: </p>

  <form action="/logonForm" method="post">
    <input type="text" name="login" placeholder="login" />
    <input type="password" name="password"  placeholder="hasło"/>
    <input type="submit" name="submit" value="zaloguj"/>
  </form>
</div>

<div class="right">
<table class="table_display">
    <tr>
      <td class="index">Index</td>
      <td>Tytul</td>
      <td>Autor</td>
      <td>Wydawnictwo</td>
      <td>Gatunek</td>
      <td>Okładka</td>
      <td>Dodaj</td>
    </tr>

    {{#each docsy}}
    <tr>
      <td class="index">{{@index}}</td>
      <td>{{tytul}}</td>
      <td>{{autor}}</td>
      <td>{{wydawnictwo}}</td>
      <td>{{gatunek}}</td>
      <td class="cover"><img src="upload/{{okladka}}" alt="brak" title="{{informacje}}" class="table_info"/>
      <td><form action="\addToBasketForm" method="get">
        <input type="hidden" name="tytul" value="{{tytul}}"/>
        <input type="hidden" name="autor" value="{{autor}}"/>
        <input type="hidden" name="wydawnictwo" value="{{wydawnictwo}}"/>
        <input type="hidden" name="gatunek" value="{{gatunek}}"/>
        <input type="hidden" name="okladka" value="{{okladka}}" />
        <input type="submit" value="Dodaj"/>
      </form></td>
  </tr>
  {{/each}}
</table>
<!--NOWA STRUKTURA------->

<!--LISTA-------------->
<div class="list_display">
{{#each docsy}}
  <div class="list_box">
    <img src="upload/{{okladka}}" alt="brak"/>
    <div class="list_left_info">
      <h3>{{tytul}}</h3>
      <p><span>Autor: </span>{{autor}}</p>
      <p><span>Wydawnictwo: </span>{{wydawnictwo}}</p>
      <p><span>Gatunek: </span>{{gatunek}}</p>
      <p class="right_info"><span>Informacje: </span>{{informacje}}</p>
      <form action="\addToBasketForm" method="get">
        <input type="hidden" name="tytul" value="{{tytul}}"/>
        <input type="hidden" name="autor" value="{{autor}}"/>
        <input type="hidden" name="wydawnictwo" value="{{wydawnictwo}}"/>
        <input type="hidden" name="gatunek" value="{{gatunek}}"/>
        <input type="hidden" name="okladka" value="{{okladka}}" />
        <input type="submit" value="Dodaj"/>
      </form>
    </div>
  </div>
{{/each}}
</div>

<!--KAFELKI------------>
<div class="tiles_display">
{{#each docsy}}
  <div class="tiles_box">
    <img src="upload/{{okladka}}" alt="brak" title="{{informacje}}" class="table_info"/>
    <h3>{{tytul}}</h3>
    <h4>{{autor}}</h4>
      <div class="tiles_info">
            <p><span>Wydawnictwo: </span>{{wydawnictwo}}</p>
            <p><span>Gatunek: </span>{{gatunek}}</p>
            <p><span>Informacje: </span>{{informacje}}</p>
      </div>
      <form action="\addToBasketForm" method="get">
        <input type="hidden" name="tytul" value="{{tytul}}"/>
        <input type="hidden" name="autor" value="{{autor}}"/>
        <input type="hidden" name="wydawnictwo" value="{{wydawnictwo}}"/>
        <input type="hidden" name="gatunek" value="{{gatunek}}"/>
        <input type="hidden" name="okladka" value="{{okladka}}" />
        <input type="submit" value="Dodaj"/>
      </form>
    </div>
{{/each}}
  </div>

</div>
